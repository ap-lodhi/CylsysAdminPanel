                type: 'POST',

                data: { postId: postId },

                success: function (data) {

                    console.log(data);

                    alert(JSON.stringify(data.Message));

                    console.log(data.Message);

                    location.reload();

                },

                error: function (error) {

                    console.error('Error during AJAX request:', error);

                    alert('An error occurred during the deletion process.');

                }

            });

        }

    }

</script>

