@{
    ViewBag.Title = "AddAnnouncement";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h2>AddAnnouncement</h2>
@model AdminCylsys.Models.AnnouncementModel
<main id="main" class="main">
    <section class="section">
        <h5>Add Announcement</h5>
        <hr>
        @if (TempData["SuccessMessage"] != null)
        {
            <script>
            $(document).ready(function () {
                alert("@TempData["SuccessMessage"]");
                window.location.href = '@Url.Action("AllAnnouncement", "Announcement")';
            });
            </script>
        }

        <!-- Check for error message -->
        @if (TempData["ErrorMessage"] != null)
        {
            <script>
            $(document).ready(function () {
                alert("@TempData["ErrorMessage"]");
            });
            </script>
        }

        <!---Form code start-->
        <div class="row mt-4">
            @using (Html.BeginForm("AddAnnouncement", "Announcement", FormMethod.Post, new
            {
                enctype =
            "multipart/form-data"
            }))
            {
                <div class="col-md-12 mb-3 form-outline">
                    <input type="text" class="form-input" placeholder=" " name="announcement_Name" required />
                    <label for="" class="form-label" id="l1">Announcement Name <span class="text-danger">*</span></label>
                </div>
                <div class="col-md-12 mb-3 form-outline">
                    <input type="date" class="form-input" placeholder=" " name="start_Date" required />
                    <label for="" class="form-label" id="l1">Start Date <span class="text-danger">*</span></label>
                </div>
                <div class="col-md-12 mb-3 form-outline">
                    <input type="date" class="form-input" placeholder=" " name="end_Date" required />
                    <label for="" class="form-label" id="l1">End Date <span class="text-danger">*</span></label>
                </div>
                <div class="col-md-12 mb-3 form-outline">
                    <textarea class="form-input" rows="4" placeholder=" " name="description" required> </textarea>
                    <label for="" class="form-label" id="l1">Description <span class="text-danger "><b>*</b></span></label>
                </div>
                <div class="col-md-12 mb-3">

                    <label>Upload Image <span class="text-danger">*</span></label>
                    @*<label for="formFile" class="form-label">Default file input example</label>*@
                    <input class="form-control" type="file" id="formFile" name="announcement_Image" required />
                </div>
                <div class="col-md-12 mb-3 text-end">
                    <input type="submit" class="btn btn-primary btn-blue mb-3" value="Save" />
                </div>

            }
        </div>

        <!--Form code end-->

    </section>

</main>