@{
    ViewBag.Title = "Index";

    Layout = "~/Views/Shared/_Layout.cshtml"; }

@using AdminCylsys.Models

<!--Main start-->

<main id="main" class="main">

    <section class="section">

        <!--Table code start-->

        <div class="row">

            <h5>Demo Enquiries</h5>

            <hr>

            <div class="col-md-12">

                <table class="table small border" id="demo">

                    <thead>

                        <tr class="btn-primary btn-blue">

                            <th scope="col">S.No.</th>

                            <th scope="col">User Name</th>

                            <th scope="col">Aplication Id</th>

                            <th scope="col">Mail Id</th>

                            <th scope="col">Mobile No.</th>

                            <th scope="col">Country</th>

                            <th scope="col">Action</th>

                        </tr>

                    </thead>

                    <tbody>

                        @{ var counter = 1; }

                        @foreach (var item in Model as List<DemoModel>)

                        {

                            <tr>

                                <th>@counter</th>

                                <td>@item.user_name</td>

                                <td>

                                    @item.application_id

                                </td>

                                <td>@item.email_id</td>

                                <td>@item.mobile_no</td>

                                <td>@item.country_id</td>

                                <td>

                                    @*<label class="switch">

                                            <input type="checkbox" class="delete-checkbox"
                                                onchange="deleteDemo(this, @item.demo_id)">

                                            <span class="slider round"></span>

                                        </label>*@

                                    <button class="btn btn-primary btn-blue mb-3 btn-sm" onclick="deleteDemo(@item.demo_id)">

                                        Delete

                                    </button>


                                </td>


                            </tr>
                            counter++;

                        }

                    </tbody>

                </table>

            </div>

        </div>

        <!--Table code end-->

    </section>

</main>

<!--Main end-->

<script>

    $(document).ready(function () {

        $('#demo').DataTable({

            searching: true,

            scrollX: false,

            aLengthMenu: [

                [5, 10, 50, 100, -1],

                [5, 10, 50, 100, "All"]

            ],

            iDisplayLength: 5

        });

    })


</script>

